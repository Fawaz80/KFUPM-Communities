    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="styles/mainStyle.css">
    <link rel="stylesheet" href="styles/navbarStyle.css">
    <link rel="stylesheet" href="styles/maingrid.css">
    <link rel="stylesheet" href="styles/postStyle.css">
    <link rel="stylesheet" href="styles/comInfoStyle.css"> <!--this file has the community info present in the left of the community home page-->
