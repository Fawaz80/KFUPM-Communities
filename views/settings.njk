        </div>
        <div class="offcanvas-body" id="editpf1">
            <!-- Edit Photo Option -->
            <div class="edit-photo">
                <h6 class="text-center">Edit Photo</h6>
                <div class="input-group mb-4">
                    <input type="file" class="form-control" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
                    <label class="input-group-text" for="inputGroupFile01"></label>
                </div>
            </div>
            <!-- Text box for Bio -->
            <div class="edit-bio">
                <label for="bio" class="form-label"> Bio</label>
